extends layout

block content
  h1= title
  div(class="container-fluid")
    div(class="row")
        - 
            let results = [
                {
                "house_Name" : "Apartment",
                "house_Type" : "Multifamily",
                "house_Cost" : $4000
                },
                {
                "house_Name" : "Bungalow",
                "house_Type" : "Townhomes",
                "house_Cost" : $19000
                },
                {
                "house_Name" : "Cabin",
                "house_Type" : "Tiny Home",
                "house_Cost" : $60000
                },

            ]
        each h,index in results
            div(class="col-sm-2" onclick=`buy(${index})`) #{h.house_Name}<br><br>
            div(class="col-sm-2" onclick=`buy(${index})`) #{h.house_Type}
            div(class="col-sm-2" onclick=`buy(${index})`) #{h.house_Cost}

            script.                
                      function buy(housenames)
                      {
                            alert(`You purchased item ${housenames+1}`)
                            document.getElementByClass("row").style.cursor = "cursor";
                      }